@font-face 
	font-family: 'icomoon'
	src:url('fonts/icomoon.eot?mfwraz');
	src:url('fonts/icomoon.eot?#iefixmfwraz') format('embedded-opentype'),
		url('fonts/icomoon.woff?mfwraz') format('woff'),
		url('fonts/icomoon.ttf?mfwraz') format('truetype'),
		url('fonts/icomoon.svg?mfwraz#icomoon') format('svg')
	font-weight normal
	font-style normal


[class^="icon-"], [class*=" icon-"] 
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale


.icon-pen:before 
	content "\e908"
	margin-right 0.4em


.icon-star-full:before 
	content "\e9d9"
	color #FFBE2C
	position relative
	top 0.1em
	margin-right 0.2em


.icon-arrow-up2:before 
	content "\ea3a"
	color #00FF00


.icon-arrow-down2:before 
	content "\ea3e"
	color #DD4F24


/*---------------------------------------------------------*/
/*------------------------Estilos--------------------------*/
/*---------------------------------------------------------*/

a
	color #22BCE0
	

body
	background #EEE
	font-family "Open Sans"
	font-size 16px
	
	
footer
	background #22BCE0
	color rgba(255,255,255,0.7)
	text-align center
	padding 1em
	
	p:first-child
		margin-bottom 0
		
	p:last-child
		margin-top 0
		
	p:last-child:before
		content "- "
		
	p:last-child:after
		content " -"
	
header
	background #343B54
	color white
	overflow hidden
	padding 0.5em
	position relative
	
	figure
		float left

	h1
		font-weight normal
		font-size 1.2em
		margin 0.3em 70px 0 0
		
		
	#avatar
		margin 0.5em 0.5em 0 0
		position absolute
		right 0
		top 0

		img
			width 55px
			border-radius 50%

	#logo
		border-right 1px solid white
		padding-right 0.5em
		margin-right 0.5em
		
		img:hover
			-webkit-transform:rotate(360deg)
			-moz-transform:rotate(360deg)
		
		img
			width 52px
			-webkit-transition 1s
			-moz-transition 1s

			
nav
	background #80BCA3
	box-shadow rgba(0,0,0,0.5) 0px 0px 10px
	padding 0 7.2em 0 0
	position relative
	
	ul
		list-style none
		margin 0
		padding 0
		
		
		#publicar_nav
			position absolute
			top -0.4em
			right 0
			
			a
				background #22BCE0
				border-radius 0.3em
				box-shadow rgba(0,0,0,0.5) 5px 5px 20px
				text-decoration none
				font-style italic
				padding 1em 0.5em 1em 2.5em
				margin-right 1em
				text-shadow rgba(0,0,0,0.5) 2px 2px 5px
				
			a:hover
				border 1px solid #CCC
				box-shadow rgba(0,0,0,0.5) 2px 2px 15px
				text-shadow rgba(0,0,0,0.5) 2px 2px 10px
				
			a:before
				font-size 35px
				position absolute
				left 0.1em
				top 0.2em
		
		#publicar_nav a.disabled
			background grey
			pointer arrow
			box-shadow none
			border none
				
		
		li
			display inline-block
			margin 0 0 0 0
			
			a
				color white
				display block
				padding 0.5em 1em
				-webkit-transition 0.3s
				
			a:hover
				background #22BCE0
				
aside
	display none
				

#contenido
	margin 1em
	
	.item
		background white
		border-bottom 3px solid #22BCE0
		margin-bottom 3em
		min-height 128px
		position relative
		
		.autor_item
			color #AAA
			
		.datos_item
			margin 1em 1em 0 0
			text-align right
			
			.fecha_item
				color #AAA
			
			.teg_item
				background #F4502A
				border-radius 0.5em
				color white
				display inline-block
				float left
				padding 0.2em 0.5em
				text-decoration none

		.imagen_item
			float left
			margin 0 1em 0 0

			img
				width 96px
		
		.titulo_item
			font-size 1.2em
			font-style italic
			padding 1em 1em 0 0

			a
				color #444
				text-decoration none
						

		.votacion
			background white
			border-radius 0 0 0.5em 0.5em
			left 4%
			margin-top 3px
			padding 0.2em 0.5em
			position absolute
			top 100%
			width 90%
			
			a
				text-decoration none
			
			.comentarios_item, .guardar_item
				float right
				

/*****Formulario*****/
				
.formulario
	padding 1em
	text-align right
	display none
	
	input
		border 1px solid #CCC
		border-radius 5px
		padding 0.2em 0.6em
		
	input[type="submit"]
		background: #22bce0;
		box-shadow: rgba(0,0,0,0.5) 5px 5px 20px;
		border-color #22bce0
		color white
		font-style: italic;
		text-shadow: rgba(0,0,0,0.5) 2px 2px 5px;
		
	input[type="submit"]:hover
		box-shadow: rgba(0,0,0,0.5) 2px 2px 10px;
		border-color #CCC


/***Responsive Design***/

@media screen and (min-width:800px)
	
	#contenido
		overflow hidden

		.item
			width 49%
			float left
			
		.item:nth-child(odd)
			margin-right 2%
			
@media screen and (min-width:1000px)
	aside
		display block
		float right
		margin 1em
		width 20%
		
		video
			width 100%